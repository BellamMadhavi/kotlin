<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
 <com.google.android.material.appbar.AppBarLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar1"
      app:title=""
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/bg_color">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/logo"
        android:layout_weight="0.9"
        android:layout_gravity="center" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/log_out_img"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:src="@drawable/logout" />
   </LinearLayout>
  </androidx.appcompat.widget.Toolbar>
 </com.google.android.material.appbar.AppBarLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:layout_margin="10dp"
     android:id="@+id/middle_layout"
     android:layout_height="wrap_content">
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/bg_color"
             android:layout_weight="0.3"
             android:textSize="14dp"
             android:id="@+id/txt_choose_action"
             android:layout_gravity="center"
             android:gravity="center"
             android:textStyle="bold"
             android:text="Choose Action"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/bg_color"
             android:textSize="14dp"

             android:id="@+id/txt_qc_app"
             android:gravity="center"
             android:layout_weight="0.3"
             android:textStyle="bold"
             android:text="QC APP"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/bg_color"
             android:textSize="14dp"
             android:gravity="center"
             android:id="@+id/txt_site_details"
             android:layout_weight="0.3"
             android:textStyle="bold"
             android:text="Site Details"/>
     </LinearLayout>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardPreventCornerOverlap="true"
      android:id="@+id/site_data_card_view"
      app:cardElevation="5dp"
      android:layout_marginTop="10dp"
      android:visibility="visible"
      app:cardCornerRadius="6dp"
      app:cardUseCompatPadding="true">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/qc_app"/>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_color"
         android:textSize="16dp"
         android:textStyle="bold"
         android:layout_margin="15dp"
        android:text="Site Details"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="15dp"
           android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/bg_color"
            android:text="Site Name   :"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/txt_site_name"
            android:textColor="@color/bg_color"
            android:text="Site Details"/>
       </LinearLayout>
    <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
           android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/bg_color"
            android:text="Unit ID          :"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/txt_unit_name"
            android:textColor="@color/bg_color"
            android:text="Site Details"/>
       </LinearLayout>
    <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginStart="15dp"
           android:visibility="gone"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/bg_color"
            android:text="Ticket ID      :"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/txt_ticket_id"
            android:textColor="@color/bg_color"
            android:text="Site Details"/>
       </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>
 </LinearLayout>
 </LinearLayout>
</FrameLayout>