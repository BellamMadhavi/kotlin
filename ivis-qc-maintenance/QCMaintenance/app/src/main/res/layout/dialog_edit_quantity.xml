<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/serialNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serial Number"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/currentQuantityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Quantity: 0"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/newQuantityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter new quantity"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_gravity="right|center"
        android:gravity="right|center">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/colorCancelButtonbg"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="Submit"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/white" />

    </LinearLayout>

 </LinearLayout>
