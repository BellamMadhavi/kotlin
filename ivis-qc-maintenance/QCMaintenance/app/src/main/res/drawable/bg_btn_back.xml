<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFDDDDDD" /> <!-- Color when button is pressed -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFCCCCCC" /> <!-- Border -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFEEEEEE" /> <!-- Default button color -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFCCCCCC" /> <!-- Border -->
        </shape>
    </item>
</selector>
